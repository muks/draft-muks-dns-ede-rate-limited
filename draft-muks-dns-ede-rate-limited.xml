    <title>DNS EDE option for rate-limited queries</title>
    <seriesInfo name="Internet-Draft" value="draft-muks-dns-ede-rate-limited-00"/>
    <author fullname="Mukund Sivaraman" initials="M." surname="Sivaraman">
